[include]
	path = config.local

# Sharing gnupg in Windows and WSL.
[gpg]
	gpgsign = true
	program = /mnt/c/Program Files (x86)/gnupg/bin/gpg.exe

# Sharing git credentials in Windows and WSL.
[credential]
	helper = /mnt/c/Program Files/Git/mingw64/bin/git-credential-manager.exe

[push]
	autoSetupRemote = true

[init]
	defaultBranch = main

[core]
	editor = code --wait

[fetch]
	prune = true

[pull]
	rebase = true

[rebase]
	autosquash = true

[alias]
	undo = reset --soft HEAD^